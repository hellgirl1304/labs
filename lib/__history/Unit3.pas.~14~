unit Unit3;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Data.DB, Data.Win.ADODB;

type
  TForm3 = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Edit1: TEdit;
    Edit2: TEdit;
    Edit3: TEdit;
    Button1: TButton;
    Button2: TButton;
    DataSource1: TDataSource;
    ADOQuery1: TADOQuery;
    Button3: TButton;
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure Button3Click(Sender: TObject);
    procedure Edit1Change(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form3: TForm3;
  id, ch: string;

implementation
uses Unit15;
{$R *.dfm}

procedure TForm3.Button1Click(Sender: TObject);
begin
With ADOQuery1 do
 begin
    Parameters.Clear;
    SQL.Clear;
    SQL.Add('INSERT INTO bookshelf (Шифр, Название, Место_нахождения) VALUES (:Шифр, :Название, :Место_нахождения)');
    Parameters.ParamByName('Шифр').Value:= Trim(Edit1.Text);
    Parameters.ParamByName('Название').Value:= Trim(Edit2.Text);
    Parameters.ParamByName('Место_нахождения').Value:= Trim(Edit3.Text);
    ExecSQL;
 end;
 With Form1.ADOQuery2 do
 begin
  SQL.Clear;
  SQL.Add('select * from bookshelf');
  Open;
 end;
 With Form1.ADOQuery1 do
 begin
  SQL.Clear;
  SQL.Add('select book.Название, author.ФИО as Автор, bookshelf.Название as Полка, ranking.Количество from ranking, book, bookshelf, author where book.Номер = ranking.Номер_книги and author.Номер = ranking.Номер_автора and bookshelf.Шифр = ranking.Шифр_полки');
  Open;
 end;
 Close;
 edit1.Clear;
 edit2.Clear;
 edit3.Clear;
end;

procedure TForm3.Button2Click(Sender: TObject);
begin
  Form3.Close;
  //Hide;
  Form1.Show;
end;

procedure TForm3.Button3Click(Sender: TObject);
begin
id := edit1.Text;
With ADOQuery1 do
 begin
    Parameters.Clear;
    SQL.Clear;
    SQL.Text:='update bookshelf set Шифр = :Шифр, Название = :Название, Место_нахождения = :Место_нахождения where Шифр = ' + id;
    Parameters.ParamByName('Шифр').Value:= Trim(ch);
    Parameters.ParamByName('Название').Value:= Trim(Edit2.Text);
    Parameters.ParamByName('Место_нахождения').Value:= Trim(Edit3.Text);
    ExecSQL;
 end;
 With Form1.ADOQuery2 do
 begin
  SQL.Clear;
  SQL.Add('select * from bookshelf');
  Open;
 end;
 With Form1.ADOQuery1 do
 begin
  SQL.Clear;
  SQL.Add('select book.Название, author.ФИО as Автор, bookshelf.Название as Полка, ranking.Количество from ranking, book, bookshelf, author where book.Номер = ranking.Номер_книги and author.Номер = ranking.Номер_автора and bookshelf.Шифр = ranking.Шифр_полки');
  Open;
 end;
 Close;
end;

procedure TForm3.Edit1Change(Sender: TObject);
begin
  ch := edit1.Text;
end;

end.
