uses Unit15;
var kid: string;
{$R *.dfm}

procedure TForm2.Button1Click(Sender: TObject); {add new ranking}
begin
{edit1.Text := '';
dblookupcombobox1.KeyValue := 0;
dblookupcombobox2.KeyValue := 0;
dblookupcombobox3.KeyValue := 0;}
With ADOQuery4 do
 begin
    Parameters.Clear;
    SQL.Clear;
    SQL.Add('INSERT INTO ranking (Номер_книги, Номер_автора, Шифр_полки, Количество) VALUES (:Номер_книги, :Номер_автора, :Шифр_полки, :Количество)');
    Parameters.ParamByName('Количество').Value:= Trim(Edit1.Text);
    Parameters.ParamByName('Номер_книги').Value:= floattostr(dblookupcombobox1.KeyValue); //Trim(num_b1);
    Parameters.ParamByName('Номер_автора').Value:= floattostr(dblookupcombobox2.KeyValue); //Trim(num_a);
    Parameters.ParamByName('Шифр_полки').Value:= floattostr(dblookupcombobox3.KeyValue); //Trim(num_bs);
    ExecSQL;
 end;
 With Form1.ADOQuery1 do
 begin
  SQL.Clear;
  SQL.Add('select book.Название, author.ФИО as Автор, bookshelf.Название as Полка, ranking.Количество from ranking, book, bookshelf, author where book.Номер = ranking.Номер_книги and author.Номер = ranking.Номер_автора and bookshelf.Шифр = ranking.Шифр_полки');
  Open;
 end;
 Close;
 //edit1.Clear;
 {dblookupcombobox1.KeyValue := 0;
 dblookupcombobox1.KeyValue := 0;
 dblookupcombobox3.KeyValue := 0;}
 button3.Visible := true;
end;

procedure TForm2.Button2Click(Sender: TObject); {cancel}
begin
  Form2.Close;
  //Hide;
  Form1.Show;
end;

procedure TForm2.Button3Click(Sender: TObject); //edit ranking
begin
kid := dblookupcombobox1.text;
With ADOQuery4 do
 begin
    Parameters.Clear;
    SQL.Clear;
    SQL.Add('update ranking set Номер_книги = :Номер_книги, Номер_автора = :Номер_автора, Шифр_полки = :Шифр_полки, Количество = :Количество where Номер_книги =' + kid);
    Parameters.ParamByName('Количество').Value:= Trim(Edit1.Text);
    Parameters.ParamByName('Номер_книги').Value:= floattostr(dblookupcombobox1.KeyValue); //Trim(num_b1);
    Parameters.ParamByName('Номер_автора').Value:= floattostr(dblookupcombobox2.KeyValue); //Trim(num_a);
    Parameters.ParamByName('Шифр_полки').Value:= floattostr(dblookupcombobox3.KeyValue); //Trim(num_bs);
    ExecSQL;
 end;
 With Form1.ADOQuery1 do
 begin
  SQL.Clear;
  SQL.Add('select book.Название, author.ФИО as Автор, bookshelf.Название as Полка, ranking.Количество from ranking, book, bookshelf, author where book.Номер = ranking.Номер_книги and author.Номер = ranking.Номер_автора and bookshelf.Шифр = ranking.Шифр_полки');
  Open;
 end;
 Close;
 button1.Visible := true;
end;

procedure TForm2.Button4Click(Sender: TObject);
begin
adoquery4.SQL.Text := 'select Номер from book where Номер = :book';
adoquery4.Parameters.ParamByName('book').Value := dblookupcombobox1.KeyValue;
adoquery4.Open;
label5.Caption := num_b1;//adoquery4['Номер']; //DBLookupComboBox1.ListSource.DataSet.FieldByName('Номер'{DBLookupComboBox1.KeyValue}).AsString;
end;

procedure TForm2.DBLookupComboBox1Click(Sender: TObject); {dblc book}
begin
  num_b1 := DBLookupComboBox1.ListSource.DataSet.FieldByName({'Номер'}DBLookupComboBox1.KeyValue).AsString;
  //num_b1 := floattostr(dblookupcombobox1.KeyValue);
  //num_b := dblookupcombobox1.KeyValue;
  {SetLength(num_b1, SizeOf(num_b));
  Move(num_b,num_b1[1],SizeOf(num_b));
  num_b1 := floattostr(num_b); }//DBLookupComboBox1.ListSource.DataSet.FieldByName('Номер'{DBLookupComboBox1.KeyValue}).AsString);//DBLookupComboBox1.KeyValue;
end;

procedure TForm2.DBLookupComboBox2Click(Sender: TObject); {dblc author}
begin
  num_a := DBLookupComboBox1.ListSource.DataSet.FieldByName('Номер'{DBLookupComboBox1.KeyValue}).AsString;//DBLookupComboBox2.KeyValue;
end;

procedure TForm2.DBLookupComboBox3Click(Sender: TObject); {dblc bookshelf}
begin
  num_bs := DBLookupComboBox1.ListSource.DataSet.FieldByName('Шифр'{DBLookupComboBox1.KeyValue}).AsString; //DBLookupComboBox3.KeyValue;
end;

procedure TForm2.Edit1KeyPress(Sender: TObject; var Key: Char); {only numbers}
begin
if not (Key in [#8,'0'..'9']) then Key := #0;
end;

procedure TForm2.FormCreate(Sender: TObject);
begin
  ADOQuery1.Active := true;
  ADOQuery2.Active := true;
  ADOQuery3.Active := true;
  adoquery5.Active := true;
end;

end.
